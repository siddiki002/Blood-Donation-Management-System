@model Employee

<form method="post" asp-action="DeleteEmployee">
    <input asp-for="@Model.OrgCode" hidden />
    @*<input as-for="@Model.Password" hidden />*@
    @*<input asp-for="@Model.Id" hidden />*@
    <div class="p-4 mt-3">
        <div class="row pb-2">
            <h2 class="text-white bg-dark">Delete Employee</h2>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" disabled class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" disabled class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
   <div class="mb-3">
        <label asp-for="@Model.Cnic"></label>
        <input asp-for="@Model.Cnic" disabled class="form-control" />
        <span asp-validation-for="@Model.Cnic" class="text-danger"></span>
    </div>
   <div class="mb-3">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" disabled class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password"></label>
        <input type="password" asp-for="@Model.Password" disabled class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Area.Name">Name of the Area</label>
        <input asp-for="@Model.Area.Name" disabled class="form-control" />
        <span asp-validation-for="@Model.Area.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Area.City"></label>
        <input asp-for="@Model.Area.City" disabled class="form-control" />
        <span asp-validation-for="@Model.Area.City" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Area.Province"></label>
        <input asp-for="@Model.Area.Province" disabled class="form-control" />
        <span asp-validation-for="@Model.Area.Province" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Delete Employee</button>


</form>