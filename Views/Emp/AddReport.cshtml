@model BloodBag
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Views/Shared/_EmpLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h1 class="text-secondary">Add Report</h1>
    </div>
</div>


<hr />

<form method="post">
    <input type="number" class="form-control" name="Id" value="@Model.Id" style="display:none;"/>

    <div>
        <label>Enter Blood Group: </label><br />
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios1" value="A+">
          <label class="form-check-label" for="exampleRadios1">
            A+
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios2" value="A-">
          <label class="form-check-label" for="exampleRadios2">
            A-
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios3" value="B+">
          <label class="form-check-label" for="exampleRadios3">
            B+
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios1" value="B-">
          <label class="form-check-label" for="exampleRadios1">
            B-
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios2" value="AB+">
          <label class="form-check-label" for="exampleRadios2">
            AB+
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios3" value="AB-">
          <label class="form-check-label" for="exampleRadios3">
            AB-
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios2" value="O+">
          <label class="form-check-label" for="exampleRadios2">
            O+
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="BloodGrp" id="exampleRadios3" value="O-">
          <label class="form-check-label" for="exampleRadios3">
            O-
          </label>
        </div>
    </div>

    <div>
        <label>Diseases If ANY: </label><br />
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="1" name="Diseases" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckChecked">
            No Disease
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="2" name="Diseases" id="flexCheckChecked" >
          <label class="form-check-label" for="flexCheckChecked">
            Hepatitis B Virus
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="3" name="Diseases" id="flexCheckChecked" >
          <label class="form-check-label" for="flexCheckChecked">
            Hepatitis C Virus
          </label>
        </div>
          <div class="form-check">
          <input class="form-check-input" type="checkbox" value="4"  name="Diseases" id="flexCheckChecked" >
          <label class="form-check-label" for="flexCheckChecked">
            HIV
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="5" name="Diseases" id="flexCheckChecked" >
          <label class="form-check-label" for="flexCheckChecked">
            HTLV
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="6" name="Diseases" id="flexCheckChecked" >
          <label class="form-check-label" for="flexCheckChecked">
            Syphilis
          </label>
        </div>
    </div>

    <div>
        <button type="submit" class="btn btn-primary mt-3" style="width: 150px;">Add</button>
    </div>
</form>


