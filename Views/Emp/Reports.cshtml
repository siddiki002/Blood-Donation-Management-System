@model List<BloodBag>
@{
    ViewData["Title"] = "Reports";
    TempData["Id"] = TempData["Id"];
    Layout = "~/Views/Shared/_EmpLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h1 class="text-secondary">Reports</h1>
    </div>
    <div class="col text-end my-auto">
        <a class="btn btn-danger mx-1" asp-controller="Emp" asp-action="Logout" >Logout</a>
    </div>
</div>

<hr />

@foreach (var item in Model)
{

                    <div class="card mb-4" style="width: 100%;">
                      <div class="card-body">
                        <p class="card-text text-decoration-none">
                            Bag ID: @item.Id<br>
                            Date: @item.Slot.Date.ToString("dd-MM-yyyy")<br><br>
                            
                            <a asp-controller="Emp" asp-action="AddReport" asp-route-id="@item.Id" class="btn btn-info" style="width: 200px;">
                                Add Report
                            </a>
                        </p>
                      </div>
                    </div>

}
