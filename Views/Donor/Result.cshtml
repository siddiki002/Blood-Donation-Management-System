@model BloodBag
@{
    ViewData["Title"] = "History";
    TempData["Id"] = TempData["Id"];
    Layout = "~/Views/Shared/_DonorLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h1 class="text-secondary">Test Report</h1>
    </div>
</div>


<hr />

@if (Model.TestedBags.Count() == 0)
{
        <div class="row m-2">
            <div class="col">
                <h3 class="text-secondary">Report Not availaible yet.</h3>
            </div>
        </div>
}

@if (Model.TestedBags.Count() > 0)
{
            <div class="row m-2">
                <div class="col">
                    <div class="">
                        If ANY Diseases Diagnosed - 
                        <ul>
                            @foreach (var item in Model.TestedBags){
                                <li>@item.Disease.Name</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
}

